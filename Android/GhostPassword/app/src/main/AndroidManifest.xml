<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.ghostpassword.android" >

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:name="com.github.ghostpassword.android.GhostPassword"
        android:allowBackup="true"
        android:icon="@mipmap/pacman_ghost_2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayOneTimeActivity"
            android:label="@string/title_activity_display_one_time" >
        </activity>
        <activity
            android:name=".UnlockActivity"
            android:label="@string/title_activity_display_saved_pass_screen" >
        </activity>
        <activity
            android:name=".CheckAndInit"
            android:label="@string/title_activity_check_and_init" >
        </activity>
        <activity
            android:name=".SavedPasswordMainActivity"
            android:label="@string/title_activity_saved_password_main" >
        </activity>
        <activity
            android:name=".AddNewPasswordActivity"
            android:label="@string/title_activity_add_new_password" >
        </activity>
    </application>

</manifest>
